
      <div class="row">
        <div class="col-xs-3">
  <div class="box">
    <%= flash[:success] %>
  </div>
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, '200', '200', fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div>
             <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></div>

          <h2>New Book</h2>
        <%= form_for @book2 do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Creat Book', class: "btn btn-default" %>
        <% end %>
        </div>
        <div class="col-xs-9">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
               <% @user.books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= link_to book.body %></td>
      </tr>
      <% end %>
            </tbody>
          </table>
        </div>
      </div>




