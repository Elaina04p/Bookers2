
      <div class="row">
        <div class="col-xs-3">
          <div class="box">
    <%= flash[:success] %>
  </div>
          <h2>User info</h2>
          <%= attachment_image_tag current_user, :profile_image, :fill, '200', '200', fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

             <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>


        <h2>New Book</h2>
        <%= form_for @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Creat Book' %>
        <% end %>
       </div>

        <div class="col-xs-9">
          <h2>Users</h2>
          <table class="table">
            <thead>
              <tr>
               <th>image</th>
               <th>name</th>
               <th colspan="3"></th>
              </tr>
            </thead>
             <% @users.each do |user| %>
            <tbody>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
            </tbody>
        <% end %>
          </table>
        </div>
      </div>